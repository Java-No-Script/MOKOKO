{
  "display_information": {
    "name": "Demo App"
  },
  "features": {
    "bot_user": {
      "display_name": "모모코봇",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/sample-command",
        "description": "This is Sample Command",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "redirect_urls": ["https://8bd9699f5e47.ngrok-free.app/slack/oauth_redirect"],
    "scopes": {
      "bot": [
        "app_mentions:read",
        "channels:history",
        "chat:write",
        "commands",
        "incoming-webhook",
        "groups:read",
        "users:read",
        "channels:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": ["app_mention", "message.channels"]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": true,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
